<%= form_with(model: inventory, local: true) do |form| %>
  <% if inventory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inventory.errors.count, "error") %> prohibited this inventory from being saved:</h2>

      <ul>
      <% inventory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :item_name %>
    <%= form.text_field :item_name, id: :inventory_item_name %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Inventory::CATEGORY_ARRAY %>
  </div>

  <div class="field">
    <%= form.label :quantity_available %>
    <%= form.number_field :quantity_available, id: :inventory_quantity_available %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.select :unit, Inventory::UNITS_ARRAY %>
  </div>

  <div class="field">
    <%= form.label :cost_per_unit %>
    <%= form.number_field :cost_per_unit, id: :inventory_cost_per_unit %>
  </div>

  <div class="actions">
    <%= form.submit class: 'action-btn' %>
  </div>
<% end %>
